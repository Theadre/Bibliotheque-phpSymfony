{% extends 'base.html.twig' %}

{% block title %}Livres emprunter
{% endblock %}

{% block body %}
    <h1>Livres emprunté par {{ app.user.username }}</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>N°</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Éditeur</th>
                <th>Date de parution</th>
                <th>Disponibilité</th>
                <th>Iban</th>
            </tr>
        </thead>
        <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.auteur }}</td>
                    <td>{{ livre.editeur }}</td>
                    <td>{{ livre.dateParution ? livre.dateParution|date('Y-m-d') : '' }}</td>
                    <td>{{ livre.disponibilite ? 'Yes' : 'No' }}</td>
                    <td>{{ livre.iban }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">aucune information</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
