{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Liste des livres empruntés</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.auteur }}</td>
            </tr>
            <tr>
                <th>Éditeur</th>
                <td>{{ livre.editeur }}</td>
            </tr>
            <tr>
                <th>Date de parution</th>
                <td>{{ livre.dateParution ? livre.dateParution|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Disponibilité</th>
                <td>{{ livre.disponibilite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Utilisateurs</th>
                <td>
                    {% for user in livre.users %}
                        -{{ user.nom }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Iban</th>
                <td>{{ livre.iban }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('livre_index') }}">retour à la liste</a>

    <a href="{{ path('livre_edit', {'id': livre.id}) }}">modifier</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
